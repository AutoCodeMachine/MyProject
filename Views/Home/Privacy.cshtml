@{
    ViewData["Title"] = "免責聲明";
}

<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - 登山地圖與討論區網站</title>

    <!-- 引入 Bootstrap CSS -->
