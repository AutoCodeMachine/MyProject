@model MyProject.ViewModels.VMForum

@{
    var user = Context.Items["User"] as Member;
}

@{
    ViewData["Title"] = "修改貼文";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-lg-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="PostID" value="@Model.PostID"/>

            <input type="hidden" asp-for="ForumID" value="@Model.ForumID" />

            <input type="hidden" asp-for="MemberID" value="@Model.MemberID" />

            <div class="form-group mb-3">
                <label asp-for="PostTitle" class="control-label"></label>
                <input asp-for="PostTitle" class="form-control" />
                <span asp-validation-for="PostTitle" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PostContents" class="control-label"></label>
                <input asp-for="PostContents" class="form-control" />
                <span asp-validation-for="PostContents" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <p>發文者：@user.AccountName</p>
                <input type="hidden" asp-for="MemberID" class="form-control" value="@Model.MemberID" readonly />
            </div>

            <input type="hidden" asp-for="PostTime" value="@Model.PostTime" />

            <div class="row row-cols-auto">       
                <div class="form-group">
                    <input type="submit" value="確認編輯" class="btn btn-outline-dark" />
                </div>
                <div>
                    <a asp-action="Details" asp-route-postid="@Model.PostID" asp-route-forumid="@ViewBag.ForumID" class="btn btn-outline-dark">取消</a>
                </div>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
